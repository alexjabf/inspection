<%#= render "layouts/first_tab" %>
<%= form_for(@driver) do |f| %>
  <% if @driver.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@driver.errors.count, "error") %> prohibited this driver from being saved:</h2>

      <ul>
        <% @driver.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  
  <p class="field">
    <%= f.label :user_id %>
    <%= f.collection_select(:user_id, @users, :id, :fullname, {:prompt => true}, :class =>'small-input')%>
  </p>
  <p class="field">
    <%= f.label :truck_id %>
    <%= f.collection_select(:truck_id, @trucks, :id, :modelbrand, {:prompt => true}, :class =>'small-input')%>
  </p>
  <p class="field">
    <%= f.label :branch_id %>
    <%= f.collection_select(:branch_id, @branches, :id, :name, {:prompt => true}, :class =>'.small-input')%>
    <%= f.hidden_field :company_id, :class=>"text-input small-input", :value=>current_user.company_id %>  
  </p>

  <div class="form-actions">
    <%= f.submit nil, :class => 'button custom-submit' %>
  </div>
<% end %>
<div>
  <%= render "layouts/action_links" %>
</div>
