<%content_for :breadcrumb do%>
<ul class="breadcrumb">
  <li><%=link_to t(:home), root_path%><span class="divider">/</span></li>
  <%if can? :index, Dog %>
  <li class="active"><%=link_to t(:index), dogs_path %><span class="divider">/</span></li>
  <%end%>
  <%if can? :new, Dog %>
  <li class="active"><%=link_to t(:new), new_dog_path%></li>
  <%end%>
</ul>
<%end%>


<div class="row-fluid">
  <div class="block span6">
    <a href="#client-info" class="block-heading" data-toggle="collapse"><%= t(:general_information) %></a>
    <div id="client-info" class="block-body collapse in show-details">
              <p>
          <b><%= t'.name' %>:</b>
          <%= @dog.name %>
        </p>
          </div>
  </div>
</div>

<div class="form-actions">
  <%if can? :index, Dog %>
  <%= link_to t(:back, :default => t('helpers.links.back')), dogs_path, :class => 'btn' %>
  <%end%>
  <%if can? :edit, Dog %>
  <%= link_to t(:edit, :default => t('helpers.links.edit')), edit_dog_path(@dog), :class => 'btn' %>
  <%end%>
  <%if can? :destroy, Dog %>
  <%= link_to t(:destroy, :default => t("helpers.links.destroy")), dog_path(@dog),
  :method => 'delete',
  :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
  :class => 'btn btn-danger' %>
  <%end%>
  <%if can? :new, Dog %>
  <%= link_to t(:new, :default => t('helpers.links.edit')), new_dog_path, :class => 'btn btn-primary', :title => t(:new) %>
  <%end%>
</div>