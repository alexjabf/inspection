<div class="tab-content default-tab" id="tab1"> <!-- This is the target div. id must match the href of this div's tab -->
  <table>
    <thead>
      <tr>
        <th><input class="check-all" type="checkbox" /></th>
        <th><%= t'.id' %></th>
        <th><%= t'.driver_id' %></th>
        <th><%= t'.truck_id' %></th>  
      </tr>

    </thead>

    <tfoot>
      <tr>
        <td colspan="6">
          <div class="bulk-actions align-left">
            <%= render "layouts/select_action" %>
          </div>
          <%= render "layouts/pagination" %>
          <div class="clear"></div>
        </td>
      </tr>
    </tfoot>

    <tbody>
      <% @hydraulic_systems.each do |hydraulic_system| %>
        <tr>
          <td><input type="checkbox" /></td>
          <%if can? :show, HydraulicSystem %>
            <td><%=link_to hydraulic_system.id, hydraulic_system, :class => 'button'%></td>
          <%else%>
            <td><%= label hydraulic_system.id, hydraulic_system.id, :class => 'button'%></td>
          <%end%>


          <% @model = hydraulic_system %>                     

          <td><%= hydraulic_system.truck.modelbrand %></td>

          <td><%= hydraulic_system.driver.user.fullname %></td>
          <%= render "layouts/index_links" %>
        <% end %>
      </tr>
    </tbody>
  </table>
  <%= render "layouts/action_links" %>
</div>