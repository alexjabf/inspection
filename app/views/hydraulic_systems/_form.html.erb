<%= render "layouts/first_tab" %>
<%= form_for(@hydraulic_system) do |f| %>
  <% if @hydraulic_system.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@hydraulic_system.errors.count, "error") %> prohibited this hydraulic_system from being saved:</h2>

      <ul>
        <% @hydraulic_system.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <fieldset class="left-custom-column">
    <p class="field">
      <%= f.label :car_jack, :style => "position: absolute" %>
      <%= f.check_box :car_jack, :class=>"text-input small-input" %>
    </p>
    <p class="field">
      <%= f.label :hoses, :style => "position: absolute" %>
      <%= f.check_box :hoses, :class=>"text-input small-input" %>
    </p>
    <p class="field">
      <%= f.label :pump, :style => "position: absolute" %>
      <%= f.check_box :pump, :class=>"text-input small-input" %>
    </p>
    <p class="field">
      <%= f.label :pto, :style => "position: absolute" %>
      <%= f.check_box :pto, :class=>"text-input small-input" %>
    </p>
    <p class="field">
      <%= f.label :valve_box, :style => "position: absolute" %>
      <%= f.check_box :valve_box, :class=>"text-input small-input" %>
    </p>
    <p class="field">
      <%= f.label :joystick, :style => "position: absolute" %>
      <%= f.check_box :joystick, :class=>"text-input small-input" %>
    </p>
    <%if controller.action_name == "new" or controller.action_name == "create" %>
      <br>
      <p class="field">
        <%= f.label :driver_id %>
        <%= f.collection_select(:driver_id, @drivers, :id, :driver_name, {:prompt => true}, :class =>'.small-input')%>
      </p>
    <%end%>
  </fieldset>
  <fieldset class="right-custom-column">
    <p class="field">
      <%= f.label :observations %>
      <%= f.text_area :observations, :style => "height:120px;" %>
    </p>
  </fieldset>
  <div class="form-actions">
    <%= f.submit nil, :class => 'button' %>
  </div>

<% end %>
<div>
  <%= render "layouts/action_links" %>
</div>
