<%#= render "layouts/first_tab" %>
<%= form_for(@cabin) do |f| %>
<% if @cabin.errors.any? %>
<div id="error_explanation">
  <h2><%= pluralize(@cabin.errors.count, "error") %> prohibited this cabin from being saved:</h2>

  <ul>
    <% @cabin.errors.full_messages.each do |msg| %>
    <li><%= msg %></li>
    <% end %>
  </ul>
</div>
<% end %>

  <p class="field">
    <%= f.label :crystals %>
    <%= f.check_box :crystals, :class=>"text-input small-input" %>
  </p>
  <p class="field">
    <%= f.label :mirrors %>
    <%= f.check_box :mirrors, :class=>"text-input small-input" %>
  </p>
  <p class="field">
    <%= f.label :elevators %>
    <%= f.check_box :elevators, :class=>"text-input small-input" %>
  </p>
  <p class="field">
    <%= f.label :door_locks %>
    <%= f.check_box :door_locks, :class=>"text-input small-input" %>
  </p>
  <p class="field">
    <%= f.label :doors %>
    <%= f.check_box :doors, :class=>"text-input small-input" %>
  </p>
  <p class="field">
    <%= f.label :observations %>
    <%= f.text_area :observations, :class=>"text-input small-input" %>
  </p>
  <%if controller.action_name == "new" or controller.action_name == "create" %>
    <p class="field">
      <%= f.label :driver_id %>
      <%= f.collection_select(:driver_id, @drivers, :id, :driver_name, {:prompt => true}, :class =>'.small-input')%>
    </p>
  <%end%>

<div class="form-actions">
  <%= f.submit nil, :class => 'button' %>
</div>

<% end %>
<div>
  <%= render "layouts/action_links" %>
