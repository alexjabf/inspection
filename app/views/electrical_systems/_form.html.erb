<%= render "layouts/first_tab" %>
<%= form_for(@electrical_system) do |f| %>
  <% if @electrical_system.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@electrical_system.errors.count, "error") %> prohibited this electrical_system from being saved:</h2>

      <ul>
        <% @electrical_system.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <fieldset class="left-custom-column">
    <p class="field">
      <%= f.label :start_up, :style => "position: absolute" %>
      <%= f.check_box :start_up, :class=>"text-input small-input" %>
    </p>
    <p class="field">
      <%= f.label :accumulator, :style => "position: absolute" %>
      <%= f.check_box :accumulator, :class=>"text-input small-input" %>
    </p>
    <p class="field">
      <%= f.label :lights, :style => "position: absolute" %>
      <%= f.check_box :lights, :class=>"text-input small-input" %>
    </p>
    <%if controller.action_name == "new" or controller.action_name == "create" %>
      <br>
      <p class="field">
        <%= f.label :driver_id %>
        <%= f.collection_select(:driver_id, @drivers, :id, :driver_name, {:prompt => true}, :class =>'.small-input')%>
      </p>
    <%end%>
    <p class="field">
      <%= f.label :company_id %>
      <%= f.collection_select(:company_id, @companies, :id, :name, {:prompt => session[:promp_company]}, :class =>'.small-input')%>
    </p>
    <p class="field">
      <%= f.label :branch_id %>
      <%= f.collection_select(:branch_id, @branches, :id, :name, {:prompt => session[:promp_branch]}, :class =>'.small-input')%>
    </p>      
  </fieldset>
  <fieldset class="right-custom-column">
    <p class="field">
      <%= f.label :observations %>
      <%= f.text_area :observations, :style => "height:100px;" %>
    </p>
  </fieldset>
  <div class="form-actions">
    <%= f.submit nil, :class => 'button' %>
  </div>

<% end %>
<div>
  <%= render "layouts/action_links" %>
</div>
