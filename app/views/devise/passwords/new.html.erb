<div class="notification" style="margin-bottom: 40px; text-align: center; padding: 10px 10px 10px 0px;">
  <p><%= t('devise.passwords.forgot') %></p>
</div>

<%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post }) do |f| %>
  <%= devise_error_messages! %>

  <p><%= f.label :email %>
    <%= f.email_field :email, :autofocus => true, :class=>"text-input" %></p>

  <div class="clear"></div>
  <p><%= f.submit "Send me reset password instructions", :class=>"button" %></p>
<% end %>
