<div class="notification" style="margin-bottom: 40px; text-align: center; padding: 10px 10px 10px 0px;">
  <p><%=t(:signin)%></p>
</div>

<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
  <p>
    <%= f.label :login %>
    <%= f.text_field :login, :autofocus => true, :class=>"text-input" %>
  </p>
  <div class="clear"></div>
  <p>
    <%= f.label :password %>
    <%= f.password_field :password, :class=>"text-input" %>
  </p>
  <br />

  <div class="clear"></div>
  <p id="remember-password">
    <% if devise_mapping.rememberable? -%>
    <p id="remember-password" style="float:left;">
     <%= t(:remember_me) %> <input id="user_remember_me" name="user[remember_me]" type="checkbox" style="margin-top: 6px; margin-left: 10px;"/> 
    </p>
  <% end -%>
  </p>
  <div class="clear"></div>
  <p><%= f.submit "Sign in", :class=>"button" %></p>
<% end %>
