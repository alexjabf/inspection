<div class="tab-content default-tab" id="tab1"> <!-- This is the target div. id must match the href of this div's tab -->
  <table>
    <thead>
      <tr>
        <th><input class="check-all" type="checkbox" /></th>
        <th><%= t'.id' %></th>
        <th><%= t'.driver_id' %></th>
        <th><%= t'.truck_id' %></th> 
        <th><%= t'.company_id' %></th> 
        <th><%= t'.branch_id' %></th> 
        <th><%= t'.created_at' %></th>
      </tr>

    </thead>

    <tfoot>
      <tr>
        <td colspan="6">
          <div class="bulk-actions align-left">
            <%= render "layouts/select_action" %>
          </div>
          <%= render "layouts/pagination" %>
          <div class="clear"></div>
        </td>
      </tr>
    </tfoot>

    <tbody>
      <% @brakes_systems.each do |brakes_system| %>
        <tr>
          <td><input type="checkbox" /></td>
          <%if can? :show, BrakesSystem %>
            <td><%=link_to brakes_system.id, brakes_system, :class => 'button'%></td>
          <%else%>
            <td><%= label brakes_system.id, brakes_system.id, :class => 'button'%></td>
          <%end%>


          <% @model = brakes_system %> 

          <td><%= brakes_system.truck.modelbrand %></td>

          <td><%= brakes_system.driver.user.fullname %></td>
          
          <td><%= brakes_system.company.name %></td>

          <td><%= brakes_system.branch.name %></td>

          <td><%= I18n.l brakes_system.created_at, :format => :long %></td>

          <%= render "layouts/index_links" %>
        <% end %>
      </tr>
    </tbody>
  </table>
  <%= render "layouts/action_links" %>
</div> 
<br><br><br>