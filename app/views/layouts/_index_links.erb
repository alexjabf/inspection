
<td><%=link_to @model, :class=>"nav-header" do%>
    <img src="/assets/icons/hammer_screwdriver.png" alt="Edit" /><%=t(:show)%>
  <%end%></td>
<td><%=link_to eval("edit_#{controller_name.singularize}_path(@model)"), :class=>"nav-header" do%>
    <img src="/assets/icons/pencil.png" alt="Edit" /><%=t(:edit)%>
  <%end%></td>
<td><%=link_to @model, method: :delete, data: { confirm: 'Are you sure?' }, :class=>"nav-header" do%>
    <img src="/assets/icons/cross.png" alt="Delete" /><%=t(:destroy)%>
  <%end%>
</td>
